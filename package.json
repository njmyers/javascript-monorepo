	"private": true,
	"dependencies": {
		"axios": "^0.18.0",
		"babel-polyfill": "^6.26.0",
		"lodash.compose": "^2.4.1",
		"lodash.debounce": "^4.0.8",
		"lodash.isequal": "^4.5.0",
		"lodash.isequalwith": "^4.4.0",
		"lodash.throttle": "^4.1.1",
		"lodash.uniq": "^4.5.0",
		"lodash.uniqby": "^4.7.0",
		"node-sass-chokidar": "0.0.3",
		"npm-run-all": "^4.1.2",
		"parse-link-header": "^1.0.1",
		"query-string": "^5.1.0",
		"react": "^16.2.0",
		"react-dom": "^16.2.0",
		"react-ga": "^2.4.1",
		"react-markdown": "^3.2.2",
		"react-redux": "^5.0.7",
		"react-router-dom": "^4.2.2",
		"react-scripts": "1.0.14",
		"react-sizeme": "^2.3.6",
		"reduce-reducers": "^0.1.2",
		"redux": "^3.7.2",
		"redux-logger": "^3.0.6",
		"redux-observable": "^0.18.0",
		"redux-thunk": "^2.2.0",
		"rxjs": "^5.5.6",
		"s3-deploy-scripts": "^0.1.5",
		"webfontloader": "^1.6.28"
	},
	"devDependencies": {
		"modernizr": "^3.6.0",
		"dotenv": "^5.0.1",
		"husky": "^0.14.3",
		"lint-staged": "^6.1.1",
		"localtunnel": "^1.8.3",
		"prettier": "^1.11.1"
	},
	"scripts": {
		"predeploy": "run-p build",
		"deploy": "s3-deploy deploy",
		"s3-deploy": "s3-deploy",
		"watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
		"build-css": "node-sass-chokidar src/ -o src/",
		"build-modernizr": "modernizr -c modernizr-config.json -d src/extra/ -u",
		"prebuild": "run-p build-css build-modernizr",
		"build": "react-scripts build",
		"postbuild": "node ./scripts/post-build.js",
		"prestart": "run-s build-modernizr",
		"start-js": "react-scripts start",
		"start": "run-p start-js watch-css",
		"test": "react-scripts test --env=jsdom",
		"eject": "react-scripts eject",
		"precommit": "lint-staged",
		"prettier": "prettier src/**/*.{js,jsx,json,md} --write"
	},
	"lint-staged": {
		"src/**/*.{js,jsx,json,md}": [
			"prettier --write",
			"git add"
		]
	}
}
