{
  "name": "javascript-monorepo",
  "private": true,
  "homepage": "https://component-library.netlify.com/",
  "repository": "https://github.com/njmyers/javascript-monorepo.git",
  "author": "Nick Myers",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "pnpm install",
    "build-packages": "pnpm recursive run build",
    "prebuild-storybook": "pnpm install && pnpm recursive run build && shx rm -rf storybook-static",
    "build-storybook": "build-storybook",
    "check-types": "tsc",
    "clean": "shx rm -rf node_modules && lerna clean -y",
    "precommit": "lint-staged",
    "prettier": "prettier 'packages/**/*.{.test.js,.stories.js,js,jsx,json}' --write",
    "sort": "sort-package-json packages/*/package.json",
    "start": "run-p storybook",
    "storybook": "start-storybook -p 9009",
    "test": "jest"
  },
  "lint-staged": {
    "packages/**/*.{.test.js,js,jsx,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "@types/react-test-renderer": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "app-root-dir": "^1.0.2",
    "camelcase": "^5.3.1",
    "datasets-us-states-abbr-names": "^1.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "husky": "^0.14.3",
    "invariant": "^2.2.4",
    "jest": "^24.9.0",
    "jest-config": "^24.9.0",
    "jest-diff": "^24.9.0",
    "jest-environment-jsdom": "^24.9.0",
    "lint-staged": "^7.3.0",
    "node-sass": "^4.13.0",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^6.0.23",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-docgen": "^3.0.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "shx": "^0.3.2",
    "sinon": "^6.3.5",
    "sort-package-json": "^1.36.0",
    "source-map-explorer": "^1.8.0",
    "storybook-readme": "^4.0.5",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.4"
  },
  "licence": "ISC"
}
