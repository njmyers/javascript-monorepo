{
  "name": "njmyers-component-library",
  "version": "0.1.20",
  "main": "build/index.js",
  "module": "lib/index.js",
  "sideEffects": false,
  "repository": "njmyers/component-library",
  "dependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-size-components": "^1.3.4",
    "smalldash": "^1.1.6"
  },
  "peerDependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-size-components": "^1.3.0",
    "smalldash": "^1.1.1"
  },
  "scripts": {
    "prepublishOnly": "yarn run build",
    "docgen": "node scripts/docgen.js && node scripts/readme.js",
    "webpack": "webpack --display-modules",
    "module": "flow-remove-types src/ -d lib/ -i stories\\|__tests__ -p",
    "build": "run-s docgen webpack module",
    "watch": "webpack --watch",
    "patch-release":
      "npm version patch && npm publish && git push --follow-tags",
    "test": "jest --watchAll",
    "source-map": "source-map-explorer build/index.js build/index.js.map"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "flow-remove-types": "^1.2.3",
    "jest": "^23.1.0",
    "npm-run-all": "^4.1.3",
    "webpack": "^4.16.0",
    "webpack-cli": "^3.0.8"
  }
}
